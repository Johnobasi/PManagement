@using PermissionManagement.Utility;
@{
    ViewBag.Title = "PageNotFound";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

@section MainContent {

    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0">
            <h1 class="page-head-line">Page Not Found</h1>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <b>Page Not Found</b>
                </div>
                <div class="panel-body" id="LoginDiv">
                    <p>
                        The requested page or resources is not found on this server.
                        <br /><br />
                        Please check the URL again or report to administrator.
                        <br /><br />
                        Thank you.
                    </p>
                </div>
                <div class="panel-footer">
                    <a href="@Helper.GetHomeURL()">Return to home page</a>
                </div>
            </div>
        </div>
    </div>
}

