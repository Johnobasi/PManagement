@using PermissionManagement.Utility;
@{
    ViewBag.Title = "Error Occurred";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
@section MainContent {

    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-6 col-sm-offset-3 col-xs-12 col-xs-offset-0">
            <h1 class="page-head-line">Error Occurred</h1>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <b>Error Occurred</b>
                </div>
                <div class="panel-body" id="LoginDiv">
                    <p>
                        An unexpected error occurred while processing your request.
                        <br /><br />
                        Please retry the action or report to administrator quoting error code @ViewBag.ErrorCode 
                        <br /><br />
                        Thank you.
                    </p>
                </div>
                <div class="panel-footer">
                    <a href="@Helper.GetHomeURL()">Return to home page</a>
                </div>
            </div>
        </div>
    </div>
}
